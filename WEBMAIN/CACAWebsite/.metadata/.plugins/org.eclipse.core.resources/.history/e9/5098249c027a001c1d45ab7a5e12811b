package controller;

import java.io.IOException;
import java.net.URLEncoder;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import domain.UserVO;  // DB 정보 정의하는 UserDAO import

// url 매핑 처리하는 코드
@WebServlet("/LoginServlet")
public class LoginServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;
      

    public LoginServlet() {
        super();
        // TODO Auto-generated constructor stub
    }
    
	// jsp에서 입력한 값과 DB 저장된 값을 비교하여 로그인 처리할 것. (post 연결)
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		//response.setContentType("text/html; charset=UTF-8");
		request.setCharacterEncoding("UTF-8");  // 오류 날 수 있으니, 인코딩 utf-8로 진행.
		// TODO Auto-generated method stub
		//doGet(request, response);
		
		UserVO login = new UserVO();
		String address;
		
		login.setUser_id(request.getParameter("user_id"));
		login.setUser_pw(request.getParameter("user_pw"));
		login.setUser_name(request.getParameter("user_name"));
		login.setUser_email(request.getParameter("user_email"));
		login.setAbout(request.getParameter("about"));
		login.setContact(request.getParameter("contact"));
		
		
		if(checkUser(login))
			address = "/Login_Success.jsp";
		else {
			address = "/Login_Fail.jsp";
		}
		
		request.setAttribute("userinfo", login);
		RequestDispatcher dispatcher = request.getRequestDispatcher(address);
		dispatcher.forward(request, response);
	}
	
	private boolean checkUser (UserVO login) {
		if(login.getUser_id().equals("user_id") && login.getUser_pw().equals("user_pw"))
		{
			return true;
		}
		else { 
			return false;
		}
	}
    
    // doGet은 Login.jsp 에서 옴. 로그인 이미지를 띄워주기만 함.
